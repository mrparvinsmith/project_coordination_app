<div class="box">
<% if current_user %>
  <h1>Update your profile</h1>
  <form method="post" action="/users/<%= @current_user.id %>">
    <div class="form-group">
      <label>First Name</label>
      <input type="text" name="first_name" value=<%= @current_user.first_name %> class="form-control">
    </div>

    <div class="form-group">
      <label>Last Name</label>
      <input type="text" name="last_name" value=<%= @current_user.last_name %> class="form-control">
    </div>

    <div class="form-group">
      <label>Email</label>
      <input type="email" name="email" value=<%= @current_user.email %> class="form-control">
    </div>

    <input type="hidden" name="_method" value="PATCH">
    <button class="btn btn-default active">Update</button>
  </form>
  <p>Don't want to update your info? <%= link_to 'Return to your profile!', user_path(@current_user) %></p>
<% else %>
  <h1>Sorry, but you have to <a href="/login">login</a> to see this page.</h1>
<% end %>
</div>
