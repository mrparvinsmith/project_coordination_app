<% if current_user %>
  <h1>Projects</h1>
  <h3>Create a new project!</h3>
  <div class="form hidden">
    <form method="post" action="/new_project">
      <input type="text" name="name">
      <input type="date" name="deadline">
      <button>Create Project</button>
    </form>
  </div>
  <% if @current_user.projects %>
    <% @current_user.projects.each do |job| %>
      <% if !job.completed %>
        <div class="active"><%= link_to job.name, project_path(job) %>
        <br><%= job.deadline %></div>
      <% else %>
        <div class="done"><%= link_to job.name, project_path(job) %>
        <br><%= job.deadline %></div>
      <% end %>
    <% end %>
  <% else %>
    <h3>You have no projects yet.</h3>
  <% end %>
  <p>Return to your profile <%= link_to 'here', '/profile' %>.</p>
<% else %>
  <h1>You must <%= link_to 'login', '/login' %> to see this page.</h1>
<% end %>

<style>
  div {
    font-size: 24px;
  }
  .active {
    display: inline-block;
    background: #FF4444;
  }
  .done {
    display: inline-block;
    background: #44FF44;
  }
  .form {
    transition: 1s;
  }
  .hidden {
    display: none;
  }
</style>
